<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:strokeColor="@color/transparent"
    app:cardCornerRadius="25dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1: Avatar and Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Doctor Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatar_background"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:strokeColor="@color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#64B5F6">

                <ImageView
                    android:id="@+id/doctor_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:padding="12dp"
                    android:contentDescription="Doctor Avatar" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor Name -->
            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Dr. Arlene McCoy"
                android:textColor="#C4000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Row 2: Speciality -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/doctor_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginRight="8dp"
                android:text="Neurologist"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- Row 3: Rating (Optional) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="Rating"
                    app:tint="#FFC107" />

                <TextView
                    android:id="@+id/doctor_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.9"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>



        <!-- Row 4: Consultation Fee and Arrow Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/consultation_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹850"
                    android:textColor="#C4000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Consultation Fee"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Arrow Button -->
            <ImageButton
                android:id="@+id/arrow_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_arrow_button"
                android:src="@drawable/ic_arrow_up_right"
                android:contentDescription="View Details"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
