<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f7fa">

    <!-- Skeleton Loading -->
    <include
        android:id="@+id/skeleton_loading"
        layout="@layout/skeleton_category_fragment"
        android:visibility="visible" />

    <!-- Actual Content -->
    <LinearLayout
        android:id="@+id/category_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Header Section -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Search and Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="Search"
                        app:tint="#9E9E9E" />

                    <EditText
                        android:id="@+id/search_input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:hint="Search doctors or category"
                        android:textSize="14sp"
                        android:textColorHint="#9E9E9E"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:maxLines="1" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacing="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_categories"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories"
                    android:checked="true"
                    app:checkedIconTint="#ffffff"
                    app:chipStrokeColor="@color/transparent"
                    app:chipBackgroundColor="@color/chip_background_color"
                    android:textColor="@color/chip_text_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_doctors"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctors"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:checkedIconTint="#ffffff"
                    app:chipStrokeColor="@color/transparent"
                    android:textColor="@color/chip_text_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mbbs"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MBBS"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:checkedIconTint="#ffffff"
                    app:chipStrokeColor="@color/transparent"
                    android:textColor="@color/chip_text_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ms"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MS"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:checkedIconTint="#ffffff"
                    app:chipStrokeColor="@color/transparent"
                    android:textColor="@color/chip_text_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_md"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MD"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:checkedIconTint="#ffffff"
                    app:chipStrokeColor="@color/transparent"
                    android:textColor="@color/chip_text_color" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Categories Section -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f4f8fb"
            android:padding="8dp">

            <!-- Categories Section Header -->
            <TextView
                android:id="@+id/categories_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp" />

            <!-- Categories Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categories_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />

            <!-- Doctors Section Header -->
            <TextView
                android:id="@+id/doctors_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctors"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:visibility="gone"/>

            <!-- Doctors List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/doctors_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_search"
                    android:alpha="0.3"
                    android:contentDescription="No results"
                    app:tint="#9E9E9E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No results found"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Try searching for doctors or categories"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</FrameLayout>
