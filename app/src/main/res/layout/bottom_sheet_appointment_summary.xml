<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Appointment Summary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#C4000000" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            app:tint="#757575" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginBottom="20dp" />

    <!-- Doctor Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#f4f8fb"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Doctor Avatar -->
            <FrameLayout
                android:layout_width="60dp"
                android:background="@drawable/circle_background"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/bs_doctor_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="DA"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/bs_doctor_avatar_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Doctor" />

            </FrameLayout>

            <!-- Doctor Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. John Doe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#C4000000" />

                <TextView
                    android:id="@+id/bs_doctor_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Cardiologist"
                    android:textSize="14sp"
                    android:textColor="#757575" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Appointment Details -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Details"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#C4000000"
        android:layout_marginBottom="12dp" />

    <!-- Date & Time Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_background_light">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginBottom="8dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/bs_appointment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Jan 23, 2025"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#C4000000" />

        </LinearLayout>

        <!-- Spacing -->
        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_background_light">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                android:layout_marginBottom="8dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/bs_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10:00 AM"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#C4000000" />

        </LinearLayout>

    </LinearLayout>

    <!-- Consultation Fee -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_background_light"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Consultation Fee"
            android:textSize="16sp"
            android:textColor="#C4000000" />

        <TextView
            android:id="@+id/bs_consultation_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹500"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <!-- Reason for Appointment -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason for Appointment"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#C4000000"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reason_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintEnabled="true"
        app:hintTextColor="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_appointment_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe your symptoms or reason for consultation"
            android:minHeight="100dp"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="500"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#C4000000" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Request Appointment Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pay_now"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Request Appointment"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="28dp"
        app:elevation="0dp"
        android:layout_marginTop="8dp" />

    <!-- Note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your appointment request will be sent to the doctor for approval"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:gravity="center"
        android:alpha="0.7" />

</LinearLayout>
