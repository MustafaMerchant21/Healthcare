<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Email Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_email"
        app:tint="#4772F5"
        android:contentDescription="Email Verification" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Verify Your Email"
        android:textColor="#212121"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="We've sent a verification link to your email address. Please verify your email to continue using the app."
        android:textColor="#757575"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- Email Address Display -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0">

        <TextView
            android:id="@+id/email_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="16dp"
            android:text="Loading email..."
            android:textColor="#4772F5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_email"
            app:drawableTint="#4772F5" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Check your inbox and spam folder. Click the verification link to activate your account."
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <!-- Resend Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resend_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Resend Verification Email"
            android:textColor="@color/colorOnPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="3"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_email"
            app:iconGravity="textStart"
            app:iconTint="@color/colorOnPrimary" />

        <!-- OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="OK, I'll Verify Later"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</LinearLayout>
