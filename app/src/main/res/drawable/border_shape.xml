<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the border (stroke) -->
    <stroke
        android:width="2dp"
    android:color="#A6C1CED3" />

    <!-- Optional: Define a solid background color for the LinearLayout -->
    <solid
        android:color="#FFFFFF" /> <!-- Set your desired background color (e.g., white) -->

    <!-- Optional: Add rounded corners -->
    <corners
        android:radius="8dp" /> <!-- Adjust corner radius as needed -->

</shape>